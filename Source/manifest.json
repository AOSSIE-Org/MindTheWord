{
  "manifest_version": 2,
  "name": "Mind the Word",
  "version": "1.4",
  "description": "Learn languages as you browse the web!",
  "content_security_policy": "media-src 'self'; object-src 'self'; script-src 'self' https://www.google.com https://ssl.google-analytics.com;",
  "background" : 
  {
    "scripts" : ["google-analytics.js", "background.js"]
  },
  "options_page": "options.html",
  "browser_action" :
  {
    "default_icon" : "48.png",
    "default_title" : "Mind the Word!"
  },
  "content_scripts" : [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : ["MindTheWord.js"],
      "run_at" : "document_end",
      "all_frames" : false
    }
  ],
  "icons" : {
    "22" : "22.png",
    "24" : "24.png",
    "48" : "48.png",
    "128" : "128.png"
  },
  "permissions": [ 
    "tabs", 
    "http://ajax.googleapis.com/*", 
    "http://*.google.com/*", 
    "http://google.com/*", 
    "http://*/*",
    "https://*/*" ]
}
